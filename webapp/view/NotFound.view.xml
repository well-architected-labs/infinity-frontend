<mvc:View
  controllerName="com.erp.myapp.controller.NotFound"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <Page
    title="Home"
    showNavButton="true"
    navButtonPress=".onNavBack">
    <content>
      <VBox
        alignItems="Center"
        justifyContent="Center"
        height="100%">
        <Title
          text="Página não encontrada!"
          wrapping="true"
          class="sapUiMediumMarginBottom"/>
        <Button
          text="Sair"
          press="logout"
          type="Reject"/>
      </VBox>
    </content>
  </Page>
</mvc:View>